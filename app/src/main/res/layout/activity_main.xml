<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_drawerlayout"
    tools:context="songmofan.baway.com.myhaitao.view.activity.MainActivity">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E85313"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <EditText

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="请输入搜索内容"
            />
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/mainFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/mainRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mainRadioButtomHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/bei"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/mainRadioButtomClassify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/fenlei"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/bei"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/mainRadioButtomCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/gouwuche"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/bei"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/mainRadioButtomMe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/me"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/bei"
            android:textSize="10dp" />

    </RadioGroup>


</LinearLayout>


    //*********侧划的布局
    <LinearLayout
        android:background="#C0E84A"
        android:layout_gravity="start"
        android:layout_width="260dp"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/main_drawerLayout_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>

    </LinearLayout>




</android.support.v4.widget.DrawerLayout>
