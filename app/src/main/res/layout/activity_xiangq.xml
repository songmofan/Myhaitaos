<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="songmofan.baway.com.myhaitao.view.activity.XiangqActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EC4D40"
        android:padding="10dp"
        android:text="商品详情"
        android:textColor="#F7F7F7"
        android:textSize="25sp" />
    <ImageView
        android:id="@+id/xiang_im"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/xiang_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="111111111"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xiang_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1111111111111111"
            android:textColor="#DB330F"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/xiang_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="已售 ：0件" />

    </LinearLayout>


    <ListView
        android:layout_weight="1"
        android:id="@+id/xiang_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"></ListView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:drawableTop="@mipmap/caichan"
            android:background="#F7F7F7"
            android:id="@+id/kf_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textSize="15sp"
            />
        <Button
            android:drawableTop="@mipmap/gouwuo"
            android:background="#F7F7F7"
            android:id="@+id/kf_button2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="15sp"
            />
        <Button
            android:drawableTop="@mipmap/shouhou"
            android:background="#DE7841"
            android:id="@+id/kf_button3"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:textSize="15sp"
            />
        <Button
            android:drawableTop="@mipmap/caichan"
            android:background="#DB330F"
            android:id="@+id/kf_button4"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:textSize="15sp"
            />


    </LinearLayout>


</LinearLayout>
